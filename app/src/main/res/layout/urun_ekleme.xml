<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eklemetest"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginLeft="@dimen/_12mdp"
        android:layout_marginRight="@dimen/_12mdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:layout_height="@dimen/_200mdp"
        android:layout_width="@dimen/_280mdp">

    </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16mdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonönce2"
                android:layout_width="@dimen/_90mdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16mdp"
                android:background="@drawable/radius"
                android:text="Önceki Fotoğraf" />

            <Button
                android:id="@+id/buttonsonra2"
                android:layout_width="@dimen/_90mdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_16mdp"
                android:layout_marginLeft="@dimen/_80mdp"
                android:background="@drawable/radius"
                android:text="Sonraki Fotoğraf" />
        </LinearLayout>
        <EditText
            android:id="@+id/editTextisim"
            android:layout_width="@dimen/_280mdp"
            android:layout_height="@dimen/_42mdp"
            android:layout_marginTop="@dimen/_16mdp"
            android:hint="@string/isim" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="@dimen/_280mdp"
            android:layout_height="@dimen/_42mdp"
            android:hint="@string/acıklama"
            android:minHeight="100dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
             />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/kategory"
            />



        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/_160mdp"
            android:layout_height="@dimen/_42mdp"
            android:text="@string/yukle"
            android:layout_marginTop="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_gravity="end"
            android:background="@drawable/radius"
            style="@style/Base.Widget.AppCompat.Button.Colored">

        </Button>


    </LinearLayout>

</ScrollView>